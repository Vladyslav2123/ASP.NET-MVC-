@model Account
@{
}
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            @if (@Model.Image != null)
            {
                <img src="@Model.Image!.GetImage()" class="img-fluid rounded-start" alt="...">
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.NormalizedUserName</h5>
                <p class="card-text">@Model.Email</p>
            </div>
        </div>
    </div>
</div>