@model PositionForm;
@{
	ViewData["Title"] = "Create position";
}

<div class="container custom-gray-bg">
	<div class="row justify-content-center">
		<h1 class="my-header display-4">Створення позиції</h1>
	</div>
	<div class="row justify-content-center">
		<div class="custom-card">
			<form method="post" enctype="multipart/form-data">
				<div class="mb-3">
					@Html.LabelFor(m => m.Title, new { @class = "form-label" })
					@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
					@Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
				</div>
				<button class="btn btn-primary" type="submit">Зберегти</button>
				<a class="btn btn-primary"
				   asp-area="" asp-controller="Position" asp-action="Index">
					Назад
				</a>
			</form>
		</div>
	</div>
</div>