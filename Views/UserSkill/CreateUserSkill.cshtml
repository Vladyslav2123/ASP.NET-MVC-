@model UserSkillForm
@{
	var userId = ViewData["UserId"];
	var list = ViewData["Skills"] as List<Skill>;
	var listSkill = new SelectList(list, "Id", "Name");
}
<div class="container">
	<div class="row">
		<form method="post" enctype="multipart/form-data">
			<div class="mb-3">
				@Html.LabelFor(us => us.ProficiencyLevel, new { @class = "form-label" })
				@Html.TextBoxFor(us => us.ProficiencyLevel, new { @class = "form-control", type = "number" })
				@Html.ValidationMessageFor(us => us.ProficiencyLevel, null, new { @class = "text-danger" })
			</div>
			<div class="mb-3">
				@Html.LabelFor(us => us.SkillId, new { @class = "form-label" })
				@Html.DropDownListFor(us => us.SkillId, listSkill, "", new { @class = "form-select" })
				@Html.ValidationMessageFor(us => us.SkillId, null, new { @class = "text-danger" })
			</div>
			<div class="mb-3">
				<button class="btn btn-primary" type="submit">Зберегти</button>
			</div>
		</form>
	</div>
</div>